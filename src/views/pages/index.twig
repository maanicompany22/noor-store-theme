{% extends 'layouts.master' %}

{% block title %}{{ store.name }} - الرئيسية{% endblock %}

{% block content %}
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">مرحباً بكم في متجر نور</h1>
            <p class="hero-description">اكتشف مجموعتنا المتنوعة من المنتجات عالية الجودة</p>
            <a href="{{ url('products') }}" class="btn btn-primary">تسوق الآن</a>
        </div>
    </div>
</section>

<section class="categories-section">
    <div class="container">
        <h2 class="section-title">تسوق حسب الفئة</h2>
        <div class="categories-grid">
            {% for category in store.categories|slice(0, 6) %}
                <div class="category-card">
                    <a href="{{ category.url }}">
                        {% if category.image %}
                            <img src="{{ category.image }}" alt="{{ category.name }}">
                        {% endif %}
                        <h3>{{ category.name }}</h3>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="products-section">
    <div class="container">
        <h2 class="section-title">المنتجات المميزة</h2>
        <salla-products-slider source="featured" auto-play="true"></salla-products-slider>
    </div>
</section>
{% endblock %}