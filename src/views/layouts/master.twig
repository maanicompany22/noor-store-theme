<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <!-- SEO Meta Tags -->
    <title>{% block title %}{{ store.name }}{% endblock %}</title>
    <meta name="description" content="{% block description %}{{ store.description }}{% endblock %}">
    <meta name="keywords" content="{% block keywords %}{{ store.keywords }}{% endblock %}">
    
    <!-- Social Media Meta Tags -->
    <meta property="og:title" content="{% block og_title %}{{ store.name }}{% endblock %}">
    <meta property="og:description" content="{% block og_description %}{{ store.description }}{% endblock %}">
    <meta property="og:image" content="{% block og_image %}{{ store.logo }}{% endblock %}">
    <meta property="og:url" content="{{ url.current }}">
    <meta property="og:type" content="website">
    
    <!-- Favicon -->
    <link rel="icon" href="{{ store.favicon }}" type="image/x-icon">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <!-- Theme CSS -->
    <link rel="stylesheet" href="{{ 'assets/css/app.css' | asset }}">
    
    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: {{ theme.settings.primary_color }};
            --secondary-color: {{ theme.settings.secondary_color }};
            --logo-width: {{ theme.settings.logo_width }}px;
        }
    </style>
    
    <!-- Salla Head Assets -->
    {{ salla.head }}
    
    {% block styles %}{% endblock %}
</head>
<body class="{{ body_class }}">
    <!-- Loading Screen -->
    <div id="loading-screen" class="loading-screen">
        <div class="loading-spinner">
            <div class="spinner"></div>
            <p>جاري التحميل...</p>
        </div>
    </div>

    <!-- Header -->
    <header class="main-header">
        {% include 'partials.header' %}
    </header>

    <!-- Navigation -->
    <nav class="main-navigation">
        {% include 'partials.navigation' %}
    </nav>

    <!-- Breadcrumb -->
    {% if breadcrumb %}
        <section class="breadcrumb-section">
            <div class="container">
                {% include 'partials.breadcrumb' %}
            </div>
        </section>
    {% endif %}

    <!-- Main Content -->
    <main class="main-content">
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        {% include 'partials.footer' %}
    </footer>

    <!-- Back to Top Button -->
    <button id="back-to-top" class="back-to-top" title="العودة للأعلى">
        <i class="icon-arrow-up"></i>
    </button>

    <!-- Cart Sidebar -->
    <div id="cart-sidebar" class="cart-sidebar">
        <salla-cart-summary></salla-cart-summary>
    </div>

    <!-- Search Modal -->
    <div id="search-modal" class="search-modal">
        <div class="search-modal-content">
            <button class="search-close-btn">&times;</button>
            <salla-search placeholder="ابحث عن المنتجات..."></salla-search>
        </div>
    </div>

    <!-- Theme JavaScript -->
    <script src="{{ 'assets/js/app.js' | asset }}"></script>
    
    <!-- Salla Scripts -->
    {{ salla.scripts }}
    
    {% block scripts %}{% endblock %}
</body>
</html>