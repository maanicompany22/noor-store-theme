<!-- Footer -->
<footer class="main-footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <h3>عن المتجر</h3>
                <p>{{ store.description|default('متجر نور - متجر إلكتروني متخصص في بيع المنتجات عالية الجودة') }}</p>
            </div>
            
            <div class="footer-section">
                <h3>روابط سريعة</h3>
                <ul>
                    <li><a href="{{ url('home') }}">الرئيسية</a></li>
                    <li><a href="{{ url('products') }}">المنتجات</a></li>
                    <li><a href="{{ url('categories') }}">الفئات</a></li>
                    <li><a href="{{ url('offers') }}">العروض</a></li>
                </ul>
            </div>
            
            <div class="footer-section">
                <h3>خدمة العملاء</h3>
                <ul>
                    <li><a href="{{ url('about') }}">من نحن</a></li>
                    <li><a href="{{ url('contact') }}">اتصل بنا</a></li>
                    <li><a href="{{ url('faq') }}">الأسئلة الشائعة</a></li>
                    <li><a href="{{ url('shipping') }}">سياسة الشحن</a></li>
                </ul>
            </div>
            
            <div class="footer-section">
                <h3>معلومات التواصل</h3>
                {% if store.phone %}
                    <p><i class="sicon-phone"></i> {{ store.phone }}</p>
                {% endif %}
                {% if store.email %}
                    <p><i class="sicon-mail"></i> {{ store.email }}</p>
                {% endif %}
                <p><i class="sicon-location"></i> المملكة العربية السعودية</p>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p>&copy; {{ "now"|date("Y") }} {{ store.name }}. جميع الحقوق محفوظة.</p>
        </div>
    </div>
</footer>