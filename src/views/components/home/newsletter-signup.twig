{# Newsletter Signup Component #}
<section class="newsletter-signup py-20 relative overflow-hidden">
    {# Background Pattern #}
    <div class="absolute inset-0 bg-gradient-to-r from-primary-600 to-secondary-600 opacity-90"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.1"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>
    
    <div class="relative z-10 container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            {# Section Header #}
            {% if component.newsletter_title or component.newsletter_description %}
                <div class="mb-12">
                    {% if component.newsletter_title %}
                        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
                            {{ component.newsletter_title }}
                        </h2>
                    {% endif %}
                    
                    {% if component.newsletter_description %}
                        <p class="text-xl text-white/90 max-w-2xl mx-auto leading-relaxed">
                            {{ component.newsletter_description }}
                        </p>
                    {% endif %}
                </div>
            {% endif %}
            
            {# Newsletter Form #}
            <div class="newsletter-form-container">
                <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
                    <div class="flex-1">
                        <input type="email" 
                               placeholder="أدخل بريدك الإلكتروني" 
                               class="w-full px-6 py-4 rounded-full text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-4 focus:ring-white/30 transition-all duration-300 text-lg">
                    </div>
                    <button type="submit" 
                            class="bg-white text-primary-600 px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl whitespace-nowrap">
                        اشتراك
                    </button>
                </div>
                
                {# Success Message #}
                <div class="mt-6 text-white/80 text-sm">
                    <p>✅ اشترك الآن واحصل على آخر العروض والمنتجات الجديدة</p>
                </div>
            </div>
            
            {# Social Proof #}
            <div class="mt-12 flex flex-wrap justify-center items-center gap-8 text-white/80">
                <div class="flex items-center gap-2">
                    <i class="sicon-users text-2xl"></i>
                    <span class="text-sm">+10,000 مشترك</span>
                </div>
                <div class="flex items-center gap-2">
                    <i class="sicon-shield-check text-2xl"></i>
                    <span class="text-sm">حماية كاملة للبيانات</span>
                </div>
                <div class="flex items-center gap-2">
                    <i class="sicon-close text-2xl"></i>
                    <span class="text-sm">إلغاء الاشتراك في أي وقت</span>
                </div>
            </div>
        </div>
    </div>
    
    {# Floating Elements #}
    <div class="absolute top-10 left-10 w-16 h-16 bg-white/10 rounded-full animate-float"></div>
    <div class="absolute bottom-20 right-20 w-20 h-20 bg-white/15 rounded-full animate-float animation-delay-1000"></div>
    <div class="absolute top-1/2 left-20 w-12 h-12 bg-white/20 rounded-full animate-float animation-delay-2000"></div>
</section>

<style>
.newsletter-signup {
    --primary-600: {{ component.newsletter_bg_color|default(theme.settings.primary_color|default('#2563eb')) }};
    --secondary-600: {{ theme.settings.secondary_color|default('#7c3aed') }};
}

@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-20px);
    }
}

.animate-float {
    animation: float 6s ease-in-out infinite;
}

.animation-delay-1000 {
    animation-delay: 1s;
}

.animation-delay-2000 {
    animation-delay: 2s;
}

.newsletter-form-container input:focus {
    transform: scale(1.02);
}

@media (max-width: 768px) {
    .newsletter-signup {
        padding: 3rem 1rem;
    }
    
    .newsletter-signup h2 {
        font-size: 2rem;
    }
    
    .newsletter-form-container .flex {
        flex-direction: column;
    }
    
    .newsletter-form-container button {
        width: 100%;
    }
}
</style>
