        "category": "الملابس"
      },
      {
        "name": "منتج تجريبي 2", 
        "price": "599.00",
        "category": "الإلكترونيات"
      },
      {
        "name": "منتج تجريبي 3",
        "price": "199.00", 
        "category": "المنزل والحديقة"
      }
    ]
  },
  "features": [
    "multi_language",
    "rtl_support",
    "responsive_design",
    "seo_optimized",
    "fast_loading",
    "customizable_colors",
    "slider_banners",
    "product_quick_view",
    "wishlist",
    "compare_products",
    "social_login",
    "newsletter_subscription"
  ],
  "support": {
    "email": "support@example.com",
    "documentation": "https://docs.example.com"
  },
  "settings": {
    "primary_color": {
      "type": "color",
      "default": "#2563eb",
      "label": "اللون الأساسي"
    },
    "secondary_color": {
      "type": "color", 
      "default": "#7c3aed",
      "label": "اللون الثانوي"
    },
    "logo_width": {
      "type": "range",
      "default": 150,
      "min": 100,
      "max": 300,
      "label": "عرض الشعار (بكسل)"
    },
    "show_search_bar": {
      "type": "boolean",
      "default": true,
      "label": "عرض شريط البحث"
    },
    "products_per_row": {
      "type": "select",
      "default": 4,
      "options": [
        {"value": 2, "label": "منتجان"},
        {"value": 3, "label": "3 منتجات"},
        {"value": 4, "label": "4 منتجات"},
        {"value": 5, "label": "5 منتجات"}
      ],
      "label": "عدد المنتجات في الصف"
    }
  }
