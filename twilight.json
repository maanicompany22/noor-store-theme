          "ملابس رجالية",
          "ملابس نسائية", 
          "ملابس أطفال"
        ]
      },
      {
        "name": "الإلكترونيات",
        "description": "أحدث الأجهزة الإلكترونية",
        "subcategories": [
          "هواتف ذكية",
          "حاسوب محمول",
          "اكسسوارات"
        ]
      },
      {
        "name": "المنزل والحديقة",
        "description": "كل ما تحتاجه للمنزل",
        "subcategories": [
          "أثاث",
          "ديكورات",
          "أدوات المطبخ"
        ]
      },
      {
        "name": "الرياضة واللياقة",
        "description": "معدات رياضية ولياقة بدنية",
        "subcategories": [
          "ملابس رياضية",
          "معدات تمرين",
          "مكملات غذائية"
        ]
